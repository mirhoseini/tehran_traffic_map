<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:gravity="right" android:id="@+id/relativeLayoutHelp">
	<ScrollView android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
		android:layout_width="wrap_content" android:layout_margin="10dp"
		android:id="@+id/scrollViewHelp" android:layout_height="150dp">
		<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
			android:orientation="vertical" android:id="@+id/linearLayoutHelp">
			<TextView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:id="@+id/txtHelp" android:text="@string/app_help" android:gravity="left|center_vertical"></TextView>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>

